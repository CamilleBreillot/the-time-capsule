<div class="container">
    <h1 class="mt-5 text-center">Congratulations you are ready to travel back to <%= @booking.machine.period_specific %>!</h1>
    <div class="d-flex justify-content-center align-items-center my-5">
      <div class="d-flex justify-content-between container-2 w-75">
        <div class="w-50">
          <h2 class="mb-4 text-center" style="color: #060B66">Your trip details</h2>
          <div class="line-height border-bottom pb-2">
            <h4 class="mb-4 border-bottom pb-4 text-center"><strong><%= @booking.machine.name %></strong></h4>
            <div class="d-flex justify-content-around ">
              <div>
                <p style="color: #060B66"><strong>Departure date</strong></p>
                <p class="text-center"><%= @booking.departure_date.to_date.strftime("%B %d, %Y") %></p>
              </div>
              <div>
                <p style="color: #060B66"><strong>Return date</strong></p>
                <p class="text-center"><%= @booking.arrival_date.to_date.strftime("%B %d, %Y") %></p>
              </div>
            </div>
          </div>
          <div class="mt-4 line-height border-bottom pb-2">
            <p><%= @booking.machine.details %></p>
            <p>You will travel in the <%= @booking.machine.period_century %>th century, in year <%= @booking.machine.period_specific %></p>
            <p>Country you will be visiting: <%= @booking.machine.place %></p>
          </div>
          <div class="mt-3">
            <% booking_duration = ((@booking.arrival_date.to_date - @booking.departure_date.to_date).to_i).abs %>
            <p><strong>Total for your trip:    </strong><%= booking_duration * (@booking.machine.price).to_i %>â‚¬ </p>
          </div>
        </div>
        <div class="mt-4 pd-2">
          <%= cl_image_tag @booking.machine.photos.first.key, height: 300, width: 400, crop: :fill %>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <p><%= link_to "Go to your dashboard", dashboard_path, class:"btn btn-ghost mx-4" %></p>
    </div>


</div>
