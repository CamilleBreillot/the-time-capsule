<div class="container" style="width: 1000px">

  <div class="d-flex justify-content-center align-items-center" style="width: 1000px; height: 500px">

    <div class="container-2">
      <h2>Start travelling with Time Capsule!</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs" style="width: 600px">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div>
          <%= f.button :submit, "Log in", class:"btn-ghost mb-3 hvr-grow-shadow" %>
        </div>
      <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
